<UserControl x:Class="TacxArtExplorer.Components.ArtPieceListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TacxArtExplorer.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Source="{Binding ImageSource}" Width="150" Height="150" Margin="5"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" Margin="10"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Description}" Margin="8"/>
        <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Width="100" Height="100" Content=">" Command="{Binding ViewDetailsCommand}" Margin="5"/>
    </Grid>
</UserControl>
