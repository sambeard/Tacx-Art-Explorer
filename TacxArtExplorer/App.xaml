<Application x:Class="TacxArtExplorer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TacxArtExplorer" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:TacxArtExplorer.ViewModels" 
             xmlns:views="clr-namespace:TacxArtExplorer.Views" 
>
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <materialDesign:BundledTheme x:Key="BundledTheme"
            BaseTheme="Light" 
            PrimaryColor="Blue" 
            SecondaryColor="Lime" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
            Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Built‑in WPF converter for bool → Visibility -->

        </ResourceDictionary>
    </Application.Resources>
</Application>
